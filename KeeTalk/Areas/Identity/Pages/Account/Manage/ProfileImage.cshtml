@page
@model ProfileImageModel
@{
    ViewData["Title"] = "Change image";
    ViewData["ActivePage"] = ManageNavPages.ProfileImage;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-image-form" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ImageFile" class="control-label"></label>
                <input asp-for="Input.ImageFile" type="file" id="imgUpload" accept="image/*">
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update image</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}